<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.codepresso.codpressoblog.mapper.PostMapper">
    <select id="findAll" resultType="com.codepresso.codpressoblog.vo.Post">
        SELECT *
        FROM post
        ORDER BY id DESC
    </select>

    <select id="findByPage" resultType="com.codepresso.codpressoblog.vo.Post">
        SELECT *
        FROM post
        ORDER BY id DESC
        LIMIT #{limit} OFFSET #{offset}
    </select>
</mapper>